# IslamHub - Cache Control Configuration

# Disable ETags
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# HTML, CSS, JS - No Cache (always fetch fresh)
<FilesMatch "\.(html|htm|js|css)$">
    <IfModule mod_headers.c>
        Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </IfModule>
</FilesMatch>

# Service Worker - Never cache
<FilesMatch "sw\.js$">
    <IfModule mod_headers.c>
        Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </IfModule>
</FilesMatch>

# Manifest - No cache
<FilesMatch "manifest\.json$">
    <IfModule mod_headers.c>
        Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
    </IfModule>
</FilesMatch>

# Images, Fonts, Audio - Cache for 1 week (static assets)
<FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot|mp3|wav|ogg)$">
    <IfModule mod_headers.c>
        Header set Cache-Control "public, max-age=604800, immutable"
    </IfModule>
</FilesMatch>

# JSON data files - No cache (untuk quran data, dll)
<FilesMatch "\.json$">
    <IfModule mod_headers.c>
        Header set Cache-Control "no-cache, no-store, must-revalidate, max-age=0"
    </IfModule>
</FilesMatch>

# Enable Gzip Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

