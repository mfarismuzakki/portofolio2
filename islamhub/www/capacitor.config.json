{
  "appId": "com.islamhub.app",
  "appName": "IslamHub",
  "webDir": "www",
  "server": {
    "androidScheme": "https"
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#0a0e27",
      "showSpinner": false,
      "androidSpinnerStyle": "small",
      "iosSpinnerStyle": "small",
      "spinnerColor": "#00ffff"
    },
    "StatusBar": {
      "style": "dark",
      "backgroundColor": "#0a0e27"
    },
    "LocalNotifications": {
      "smallIcon": "ic_notification",
      "iconColor": "#00FFFF",
      "sound": "default"
    }
  }
}
